<% if user_signed_in? %>

<h1>Items</h1>

<table class="table table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Product</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list_shopping.items.each do |item| %>
      <tr>
        <td><%= item.product %></td>
        <td><%= item.amount %></td>
        <td><%= link_to 'Edit', edit_list_shopping_item_path(@list_shopping.id, item.id), class:"btn btn-outline-success btn-sm" %></td>
        <td><%= link_to 'Delete', [@list_shopping, item], method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm text-right" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% end %>
<%= link_to 'New Item',  new_list_shopping_item_path(@list_shopping),  class:"btn btn-primary" %>
<%= link_to 'Back', list_shoppings_path,  class:"btn btn-primary"%>
